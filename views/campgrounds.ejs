<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp</h1>
            <p>Check out the beautiful campgrounds all over the world</p>
            <p>
                <a href="/campground/new" class="btn btn-primary btn-lg">Add a new campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src='<%= campground.image %>'>
                    <div class="caption"><%= campground.name %></div>
                </div>
            </div>
        <% }); %> 
    </div>
</div>

<%- include("partials/footer") %>