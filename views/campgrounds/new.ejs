<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1>create a new campground</h1>
        <div class="form-container">
            <form action='/campgrounds' method='POST'>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" min=0.00 step="0.01" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" placeholder="url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type='text' name="campground[description]" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %> 